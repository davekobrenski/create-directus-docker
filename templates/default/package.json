{
  "name": "directus-mysql-docker",
  "version": "1.3.0",
  "description": "A helper app to configure Directus on Docker with MySQL, Adminer, and Apollo GraphQL Sandbox",
  "main": "./lib/index.js",
  "type": "module",
  "scripts": {
    "start": "node ./lib/index.js",
    "launch": "node ./lib/index.js",
    "stop": "docker compose down",
    "snapshot": "docker compose exec directus npx directus schema snapshot /directus/snapshots/\"$(date \"+%F\")\"-snapshot-\"$(date \"+%s\")\".yaml",
    "snapshot-apply": "docker compose exec directus npx directus schema apply /directus/snapshots/$npm_config_snapshot",
    "snapshot-test": "docker compose exec directus npx directus schema apply --dry-run /directus/snapshots/$npm_config_snapshot"
  },
  "bin": {
    "create-directus-docker": "./lib/index.js",
    "cdd": "./lib/index.js"
  },
  "files": [
    "docker-compose.yml",
    "lib/**/*",
    "./lib/index.js",
    "./lib/check-requirements.js",
    "./lib/launch-services.js"
  ],
  "keywords": [
    "directus",
    "docker",
    "mysql",
    "installer"
  ],
  "exports": {
    ".": "./lib/index.js",
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rollmug/directus-mysql-template.git"
  },
  "author": {
    "name": "Dave Kobrenski",
    "email": "dave@rlmg.com"
  },
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/rollmug/directus-mysql-template/issues"
  },
  "homepage": "https://github.com/rollmug/directus-mysql-template#readme",
  "dependencies": {
    "call-bind": "^1.0.2",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "generate-password": "^1.7.0",
    "gitconfig": "^2.0.8",
    "inquirer": "^9.2.11",
    "log-update": "^5.0.1",
    "lookpath": "^1.2.2",
    "node-jq": "^4.0.1",
    "open": "^9.1.0",
    "ora": "^7.0.1",
    "wait-on": "^7.0.1"
  }
}
